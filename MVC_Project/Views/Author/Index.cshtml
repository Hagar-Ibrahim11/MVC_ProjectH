@model IEnumerable<MVC_Project.Author>

    @{
    ViewData["Title"] = "Index";
    }
    <style>
        .card-img-top {
            width: 100%;
                    height: 20vh;
        object-fit: contain;
        }
    </style>
    <a href="\Author\AddNewAuthor">AddNewAuthor</a>
    <nav class="AlphabetNav">
        <a href="#A">A</a>
        <a href="#B">B</a>
        <a href="#C">C</a>
        <a href="#D">D</a>
        <a href="#E">E</a>
        <a href="#F">F</a>
        <a href="#G">G</a>
        <a href="#H">H</a>
        <a href="#I">I</a>
        <a href="#J">J</a>
        <a href="#K">K</a>
        <a href="#L">L</a>
