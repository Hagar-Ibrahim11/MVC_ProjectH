<div class="container-fluid">
    <div class="row  row-cols-md-3">

    @foreach(Author author in Model)
    { <div class="col mb-3">
                <div class="card w-100">
                    <div class="card">
                        <img class="card-img-top object-fit-scale  rounded-circle" src="/images/authors/@author.ImageUrl" />
                        <div class="card-body">
                            <h5 class="card-title">@author.AuthorName</h5>
                            <h5 class="Contact-name">@author.AuthorName</h5> 
                            <a href="/instructor/details/@author.AuthorId" class="btn btn-primary">See Details</a>

                        </div>
                    </div>
                </div>
            </div>
    }
    </div>
</div>

    

