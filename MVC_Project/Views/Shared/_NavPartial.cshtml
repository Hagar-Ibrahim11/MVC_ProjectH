<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('searchOption').addEventListener('change', function () {
            var form = document.getElementById('searchForm');
            var action = '';

            switch (this.value) {
                case 'Author':
                    action = '@Url.Action("SearchByAuthor", "Home")';
                    break;
                case 'Book':
                    action = '@Url.Action("SearchByBook", "Home")';
                    break;
            }

            // Update the form's action dynamically
            form.action = action;
        });
    });
</script>