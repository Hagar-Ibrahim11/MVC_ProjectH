@model MVC_Project.ViewModel.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}
<link rel="stylesheet" type="text/css" href="/css/bootstrap-FileUpload.min.css" />
<style>
    .cascading-right {
        margin-right: -40px;
    }

    @@media (max-width: 991.98px) {
        .cascading-right {
            margin-right: 0;
        }
    }

    .inputValidation {
        color: var(--accent-color);
    }

    .form-control[type=file] {
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        word-wrap: break-word;
        box-sizing: border-box;
        margin: 0;
        font-family: inherit;
        outline: 0;
        display: block;
        width: 100%;
        padding: .375rem .75rem;
        font-weight: 400;
        line-height: 1.5;
        appearance: none;
        background: var(--accent-color);
        text-decoration: none !important;
        position: relative;
        border: 1px solid transparent;
        border-radius: 1rem;
        font-size: 15px;
        text-align: center;
        color: #fff;
        z-index: 1;
        white-space: nowrap;
        vertical-align: middle;
        transition: all 0.3s ease-in;
        touch-action: manipulation;
        user-select: none;
        overflow: hidden;
        cursor: pointer;
    }

    input[type="email"],
    input[type="number"],
    input[type="search"],
    input[type="text"],
    input[type="tel"],
    input[type="url"],
    input[type="password"],
    textarea,
    select {
        margin-bottom: 0px;
    }

    div.btn-wrap .btn.btn-outline-accent {
        color: var(--dark-color) !important;
        border-color: var(--accent-color) !important;
    }


        div.btn-wrap .btn.btn-outline-accent:hover {
            color: var(--accent-color) !important;
            border-color: var(--dark-color) !important;
        }
</style>
<div class="section-header align-center">
    <div class="title">
        <span>Grow Our Treasure</span>
    </div>
    <h2 class="section-title">Assign Role</h2>
</div>
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.15);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 ">
                        <h2 class="fw-bold mb-5 text-center">Assign Role</h2>
                        <form asp-action="AssignRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="role" class="control-label"></label>
                                <select asp-for="role" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))">
                                    <option value="">Select Role</option>
                                </select>
                                <span asp-validation-for="role" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-lg-0">
                <div class="">
                    <img src="/images/Wallpaper/BookBG(1).jpg" class="w-100 rounded-4 shadow-4"
                         alt="" />
                    </<div>
                    </div>
                </div>
            </div>
            <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->

<partial name="_ValidationScriptsPartial"></partial>
<script src="/js/bootstrap-FileUpload.min.js"></script>

